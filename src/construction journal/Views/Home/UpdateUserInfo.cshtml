<script type="text/javascript">
    $(function () {
        $(".accordion").accordion({
            collapsible: true
        });
    });
</script>

<script type="text/javascript">

    $(function () {
    var cities = [];
    @{
        foreach(String city in ViewBag.autocompleteCities)
        {
            @:cities.push('@Html.Raw(city)');
        }
    }
		$( "#City" ).autocomplete({
			source: cities
		});
	});

</script>

