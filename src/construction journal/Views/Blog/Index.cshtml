@model Models.Partial.BlogViewData
@{
    ViewBag.Title = "Index";
}
<h2>
    Twój profil</h2>
@foreach (var item in Model.Posts)
{
    <table>
        <tr>
            <th>
            </th>
        </tr>
        @{if (item.PhotoId != null)
          {
              string imageName = "/uploads/" + item.PhotoId + ".jpg"; 
        <tr>
            <td>
                <a href="@Url.Content(@imageName)">    <img src="@Url.Content(@imageName)" alt="" width="10%" height = "10%"/></a>
            </td>
        </tr>
          }
        }
        <tr>
            <td>
                @item.Text
            </td>
        </tr>
        <tr>
            <td>
                @item.CreationDate.ToString()
            </td>
        </tr>
        <tr>
            <td>
                @item.User.Name
            </td>
        </tr>
    </table>
    
    <br />
    <br />
    <br />
}

@Html.ActionLink("Dodaj wpis", "AddPost")
